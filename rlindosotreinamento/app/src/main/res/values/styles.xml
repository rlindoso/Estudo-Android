<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titles">
        <item name="android:textSize">@dimen/titles</item>
        <item name="android:textColor">@color/tites</item>
    </style>

    <style name="texts">
        <item name="android:textSize">@dimen/texts</item>
        <item name="android:textColor">@color/texts</item>
    </style>

    <style name="btn">
        <item name="android:textSize">@dimen/btnLabel</item>
        <item name="android:textColor">@color/btnLabel</item>
        <item name="android:background">@color/btnBack</item>
    </style>

    <style name="spnTitle">
        <item name="android:textSize">@dimen/titles</item>
        <item name="android:textColor">@color/texts</item>
        <item name="android:background">@color/spnTitle</item>
    </style>

    <style name="spnText">
        <item name="android:textSize">@dimen/texts</item>
        <item name="android:textColor">@color/texts</item>
        <item name="android:background">@color/spnText</item>
    </style>

    <style name="caption">
        <item name="android:textSize">@dimen/texts</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
